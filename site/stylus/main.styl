@import url('https://fonts.googleapis.com/css?family=K2D')

bg = rgba(255, 255, 255, 1)
brdr = rgba(99, 114, 130, .1)
fg = rgba(19, 20, 49, .8)
w = 300px
h = 100%

t-new = rgb(51, 153, 238)
t-fix = rgb(0, 217, 116)
t-bug = rgb(86, 77, 101)

body
    font 16px/1.1 K2D, sans-serif
    background bg
    color fg
    margin 0
    overflow hidden

    #tinylog
        margin 1rem 0
        height h

        b#changes, a#log
            background rgba(brdr, 0.01)
            width w + 4
            border 1px solid brdr
            text-align center
            border-radius 0.25rem 0.25rem 0 0
            display block
            margin 0 auto
            padding 0.25rem 0

        a#log
            border-radius 0 0 0.25rem 0.25rem

        span.date
            text-align center
            padding 0.25rem
            display block

            &:before, &:after
                content ''
                background brdr
                width 75px
                height 1px
                display inline-block
                margin-bottom 4px

            &:before
                margin-right 4px

            &:after
                margin-left 4px

        a, a:visited
            color fg

        ul#list
            max-width w
            max-height calc(100% - 30px * 2 - 1rem * 2)
            box-sizing border-box
            list-style-type none
            border 1px solid brdr
            border-top 0
            border-bottom 0
            display block
            margin 0 auto
            padding 1em 0
            overflow-y auto

            li
                display flex
                flex-direction column
                // margin 0.5rem 0
                position relative
                
                &:before
                    content ""
                    height auto
                    width 3px
                    background transparent
                    position absolute
                    top 0
                    left 0
                    bottom: 0

                &.new:before
                    background t-new

                &.fix:before
                    background t-fix

                &.bug:before
                    background t-bug

                span
                    color bg
                    width 3em
                    height 1.1em
                    text-align center
                    border-radius 0 .5rem .5rem 0
                    padding 0.4rem
                    margin-right 0.8rem
                    position relative

                    &.new
                        background t-new

                    &.fix
                        background t-fix

                    &.bug
                        background t-bug

            p
                word-break break-word
                padding 0 1em
